{
  "name": "todo-manager",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "nodemon -e js,ejs",
    "start:prod": "node index.js",
    "build": "npm install && NODE_ENV=production npx sequelize-cli db:migrate",
    "pretest": "NODE_ENV=test npm run recreate-test-db",
    "recreate-test-db": "npx sequelize-cli db:migrate --env test && npx sequelize-cli db:seed:all --env test",
    "test": "NODE_ENV=test  jest",
    "prepare": "cd .. && husky install todo-app/.husky"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.2",
    "connect-ensure-login": "^0.1.1",
    "connect-flash": "^0.1.1",
    "cookie-parser": "^1.4.6",
    "csurf": "^1.11.0",
    "dotenv": "^16.3.2",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "pg": "^8.11.3",
    "sequelize": "^6.35.2",
    "tiny-csrf": "^1.1.4"
  },
  "devDependencies": {
    "cheerio": "^1.0.0-rc.12",
    "eslint": "^8.56.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "nodemon": "^3.0.3",
    "prettier": "^3.2.4",
    "sequelize-cli": "^6.6.2",
    "supertest": "^6.3.4"
  },
  "lint-staged": {
    "*.js": [
      "eslint",
      "prettier --write ."
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "test": {
    "use_env_variable": "DATABASE_URL",
    "dialect": "postgres",
    "logging": false
  }
}
